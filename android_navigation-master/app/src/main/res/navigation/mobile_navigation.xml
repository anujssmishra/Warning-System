<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.vatron_navigation.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.vatron_navigation.ui.gallery.GalleryFragment"
        android:label="Detect Existing image"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.vatron_navigation.ui.slideshow.SlideshowFragment"
        android:label="Crowdsource Now" />

    <fragment
        android:id="@+id/nav_tools"
        android:name="com.example.vatron_navigation.ui.tools.ToolsFragment"
        android:label="How it works"
        tools:layout="@layout/fragment_tools" />

    <fragment
        android:id="@+id/nav_share"
        android:name="com.example.vatron_navigation.ui.share.ShareFragment"
        android:label="Share with Developers"
        tools:layout="@layout/fragment_share" />

    <fragment
        android:id="@+id/nav_send"
        android:name="com.example.vatron_navigation.ui.send.SendFragment"
        android:label="Refer and Earn"
        tools:layout="@layout/fragment_send" />
</navigation>